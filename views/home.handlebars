<header>
        <section class="title-nav">
            <div id="name-logo">
                <h1>Florian Meneses</h1>
            </div>
            <nav class="header-nav">
                <ul>
                    <li><a href="#about-me">About Me</a></li>
                    <li><a href="#portfolio">Portfolio</a></li>
                    <li><a href="#resume">Resume</a></li>
                    <li><a href="#contact-me">Contact Me</a></li>
                </ul>
            </nav>
        </section>
        <section id="hero-banner">
            <img id="avatar" src="/img/gura.png" alt="Gura Avatar">
            <img id="hero-bg" src="/img/abstract14095.jpg" alt="Main Image">
            <div id="hero-text">
                <h2>Welcome!</h2>
            </div>
        </section>
    </header>
    <main>
        <section id="about-me">
            <div class="col-1">
                <h3>About Me</h3>
            </div>
            <div class="col-2">
                <p>
                    Passionate gaming industry veteran, working with tool and automation frameworks. Burgeoning Full Stack Developer.
                </p>
                <div class="tech-stack-container">
                    <div >
                        {{> languages }}
                    </div>
                    <div>
                        {{> tech-stack }}
                    </div>
                </div>
            </div>
        </section>
        <section id="portfolio">
            <div class="col-1">
                <h3>Portfolio</h3>
            </div>
            <div class="col-2">
                <div id="apps">
                    {{#each apps as |app| }}
                    {{#if app.is_main}}
                    {{> main-app }}
                    {{/if}}
                    {{/each}}
                    <div id="app-card-container">
                        {{#each apps as |app| }}
                        {{#unless app.is_main }}
                        {{> apps }}
                        {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </section>
        <section id="resume">
            <div class="col-1">
                <h3>Resume</h3>
            </div>
            <div class="col-2">
                <div id="resume-dl">
                    <a href="/content/MenesesFlorian_Resume.pdf" download="FlorianMeneses_Resume">Download Resume</a>
                </div>
            </div>
        </section>
        <section id="contact-me">
            <div class="col-1">
                <h3>Contact Me</h3>
            </div>
            <div class="col-2">
                <div id="contact-info-container">
                    <div class="contact-item" id="linked-in">
                        <a href="https://www.linkedin.com/in/florian-meneses-02807b5/">
                            Linked-In
                        </a>
                    </div>
                    <div class="contact-item" id="email">
                        <a href="mailto:flmeneses.dev@gmail.com">
                            flmeneses.dev@gmail.com
                        </a>
                    </div>
                    <div class="contact-item" id="github">
                        <a href="https://github.com/Myuze">
                            Github
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script type="text/javascript" src="/js/animations.js"></script>
</body>
</html>
